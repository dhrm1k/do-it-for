{
  "manifest_version": 3,
  "name": "do it for",
  "version": "1.0",
  "description": "A motivational extension to help you do it for someone special",
  "action": {
    "default_popup": "popup.html",
    "default_title": "do it for"
  },
  "permissions": ["storage", "tabs", "declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}